{
    "manifest_version": 3,
    "name": "Get Back to Work",
    "version": "1.0.0",
    "icons": {
        "16": "resources/icon16.png",
        "32": "resources/icon32.png",
        "128": "resources/icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/service-worker.js",
        "type": "module"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://facebook.com/*",
        "https://facebook.com/*"
    ]
}