{
    "manifest_version": 3,
    "name": "Facebook Color Picker",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "service-worker/service-worker.js"
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "scripting",
        "tabs",
        "webNavigation",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}